<%- include('./partials/header.ejs'); %>
<code>app.get('/admin')</code>
<br />
<h1>Admins Page</h1>
<p>Welcome Administrator <strong><%= admin_name %></strong></p>
<img src="/lounge.gif" alt="GIF: bar lounge" style="width: 50vh" />
<br />
<br />
<table class="table">
  <thead>
    <tr>
      <th>Username</th>
      <th>Type</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% users.forEach(function(user){ %>
    <tr>
      <td><%- user.username %></td>
      <td><%- user.type %></td>
      <td>
        <div class="d-flex">
          <form action="/promoteUser" method="POST">
            <input type="hidden" name="username" value="<%- user.username %>" />
            <button type="submit" class="btn btn-success btn-sm">
              Promote
            </button>
          </form>
          <form action="/demoteUser" method="POST">
            <input type="hidden" name="username" value="<%- user.username %>" />
            <button type="submit" class="btn btn-danger btn-sm">Demote</button>
          </form>
        </div>
      </td>
    </tr>
    <% }); %>
  </tbody>
</table>
<button onclick="window.location.href='/protectedRoute'">Exit</button>
